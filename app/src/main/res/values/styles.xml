<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- app -->
    <style name="Theme.KhoLand" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/light_yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/light_yellow</item>
        <item name="colorAccent">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/bs_overlay</item>
    </style>

    <style name="Theme.KhoLand.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- base -->

    <style name="primary_shape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp8</item>
    </style>

    <!--view -->
    <style name="view_horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="view_horizontal_white" parent="view_horizontal">
        <item name="android:background">@color/white</item>
    </style>

    <style name="view_vertical" >
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="view_vertical_yellow" parent="view_vertical">
        <item name="android:background">@color/yellow</item>
    </style>


    <!-- bg -->

    <style name="bg_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="bg_white" parent="bg_base">
        <item name="android:background">@color/white</item>
    </style>

    <style name="bg_yellow" parent="bg_base">
        <item name="android:background">@color/yellow</item>
    </style>

    <!--Bs -->

    <style name="bs_overlay" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bs_base</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="bs_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dp32</item>
        <item name="cornerSizeTopLeft">@dimen/dp32</item>
    </style>

    <style name="bs_base" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/bs_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bs_white" parent="bs_base">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!--tv -->

    <style name="tv_16_base" parent="Widget.MaterialComponents.TextView">
        <item name="shapeAppearanceOverlay">@style/bs_shape</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:drawablePadding">@dimen/dp8</item>
    </style>

    <style name="tv_12_base" parent="tv_16_base">
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="tv_12_grey" parent="tv_12_base">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="tv_12_blue" parent="tv_12_base">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="tv_16_blue_bold" parent="tv_16_blue">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="tv_12_yellow" parent="tv_12_base">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="tv_16_yellow" parent="tv_16_base">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="tv_16_yellow_bold" parent="tv_16_yellow">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="tv_16_blue" parent="tv_16_base">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="tv_24_blue" parent="tv_24_base">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="tv_12_white" parent="tv_12_base">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_24_base" parent="tv_16_base">
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="tv_24_yellow" parent="tv_24_base">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="tv_error" parent="tv_16_base">
        <item name="android:background">@color/red</item>
        <item name="android:padding">@dimen/dp2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_32_base" parent="tv_16_base">
        <item name="android:textSize">@dimen/sp32</item>
    </style>

    <style name="tv_32_yellow" parent="tv_32_base">
        <item name="android:textColor">@color/yellow</item>
    </style>]
    <style name="tv_32_blue" parent="tv_32_base">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="tv_64_blue" parent="tv_16_base">
        <item name="android:textSize">@dimen/sp64</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!--button -->

    <style name="btn_base" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/dp60</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:elevation">@dimen/dp2</item>
        <item name="iconGravity">textStart</item>
        <item name="shapeAppearance">@style/primary_shape</item>
        <item name="iconPadding">@dimen/dp0</item>
        <item name="rippleColor">@color/grey</item>
    </style>

    <style name="btn_yellow" parent="btn_base">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/blue</item>
        <item name="rippleColor">@color/blue</item>
    </style>
    <!--edit View -->

    <style name="ev_base" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="hintTextColor">@color/light_yellow</item>
        <item name="android:textColorHint">@color/light_yellow</item>
        <item name="shapeAppearance">@style/primary_shape</item>
        <item name="editTextStyle">@style/et_base</item>
        <item name="boxStrokeColor">@color/yellow</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="ev_number" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="hintTextColor">@color/light_yellow</item>
        <item name="android:textColorHint">@color/light_yellow</item>
        <item name="placeholderTextAppearance">@style/tv_16_base</item>
        <item name="placeholderTextColor">@color/grey</item>
        <item name="boxStrokeColor">@color/yellow</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <!--edit Text -->
    <style name="et_base" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/tv_16_base</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="et_number" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/dp0</item>
        <item name="android:textAppearance">@style/tv_16_base</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:inputType">number</item>
    </style>

    <!--  tab   -->

    <style name="tab_layout_base" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/tv_16_base</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/grey</item>
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabSelectedTextColor">@color/blue</item>

    </style>

    <!--  cv   -->

    <style name="cv_base" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/dp8</item>
        <item name="cardCornerRadius">@dimen/dp8</item>
        <item name="cardElevation">@dimen/dp8</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="cv_blue" parent="cv_base">
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="GenericDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>